{
    "name": "hamler-vscode",
    "displayName": "Hamler",
    "description": "Hamler syntax extension for VSCode",
    "version": "0.0.1",
    "publisher": "emqx",
    "engines": {
        "vscode": "^1.47.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "contributes": {
        "languages": [
            {
                "id": "hamler",
                "aliases": [
                    "Hamler",
                    "hamler"
                ],
                "extensions": [
                    ".hm"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "hamler",
                "scopeName": "source.hamler",
                "path": "./syntaxes/hamler.tmLanguage.json"
            }
        ]
    }
}
